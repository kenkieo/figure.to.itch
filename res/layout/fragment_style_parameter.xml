<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bottom_content"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip" >

    <ImageView
        android:id="@+id/fragment_style_parameter_collapse"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/common_transparent_selector"
        android:scaleType="center"
        android:src="@drawable/icon_homepage_parameter_collapse" />

    <LinearLayout
        android:id="@+id/fragment_style_parameter_times"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_below="@+id/fragment_style_parameter_collapse" >

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/text_parameter_times"
            android:textColor="@color/common_white" />

        <com.example.com.demo.view.CustomSeekBar
            android:id="@+id/fragment_style_parameter_times_seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_style_parameter_alpha"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_below="@+id/fragment_style_parameter_times" >

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/text_parameter_alpha"
            android:textColor="@color/common_white" />

        <com.example.com.demo.view.CustomSeekBar
            android:id="@+id/fragment_style_parameter_alpha_seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>